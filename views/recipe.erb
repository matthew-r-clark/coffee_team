<table class="recipe">
  <tr>
    <td class="left-just"><%= @recipe[:title] %></td>
    <td class="right-just"><%= @recipe[:brew_method] %></td>
  </tr>
  <tr>
    <td class="left-just">
      <a href="/profile/<%= @recipe[:username] %>"><%= @recipe[:username] %></a>
    </td>
    <td class="right-just"><%= format_time(@recipe[:time]) %></td>
  </tr>
  <hr class="forum-post">
  <tr>
    <td>
      <% @recipe[:content].each do |line| %>
        <div style="text-align:left;"><%= line %></div>
      <% end %>
    </td>
  </tr>
</table>

<% content_for :sub_menu do %>
  <li><a class="nav-button" href="/community">General</a></li>
  <li><a class="nav-button" href="/community/recipes">Recipes</a></li>
<% end %>